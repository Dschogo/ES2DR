{
    "manifest_version": 2,
    "name": "EStDR",
    "version": "0.0.1b1",
    "description": "EStDR - Epidemic Sound to Davinci Resolve",
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": ["https://epidemicsound.com/*"],
            "js": ["page-eater.js"]
        }
    ],
    "icons": {
        "16": "icons/icon16.png"
    },
    "browser_action": {
        "default_icon": "icons/icon16.png"
    },
    "permissions": ["tabs", "storage", "activeTab", "contextMenus"],
    "browser_specific_settings": {
        "gecko": {
            "update_url": "https://raw.githubusercontent.com/Dschogo/EStDR/master/update.json",
            "strict_min_version": "102.0"
        }
    }
}
